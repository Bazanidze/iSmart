{
  "name": "playwrightAutomation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clear-allure": "rimraf allure-results allure-report",
    "allure-open": "allure open allure-report",
    "test": "playwright test",
    "posttest": "allure generate allure-results --clean -o allure-report",
    "test:all": "playwright test --browser=all",
    "test-and-report": "npm-run-all --continue-on-error clear-allure test",
    "start": "yarn clear-allure && yarn test-and-report"
  },
  "repository": "https://gitlab.com/bazanchik-group/skillbox_module_11.git",
  "author": "Nikolay",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^22.15.21",
    "@types/nodemailer": "^6.4.17",
    "allure-commandline": "^2.34.0",
    "allure-playwright": "^3.3.3",
    "nodemailer": "^6.4.17",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "dotenv": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2"
  }
}
